<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/background_alias">

    <TextView
        android:id="@+id/tv_appbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/whoami_orange"
        android:gravity="center_vertical"
        android:paddingStart="62dp"
        android:text="@string/result_result_fragment"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/days_one"
        android:shadowColor="@color/gray"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ibtn_sweet_home"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@color/whoami_orange"
        android:padding="12dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_baseline_win"
        app:layout_constraintBottom_toBottomOf="@id/tv_appbar"
        app:layout_constraintStart_toStartOf="@id/tv_appbar"
        app:layout_constraintTop_toTopOf="@id/tv_appbar" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_restart"
        android:layout_width="220dp"
        android:layout_height="55dp"
        android:backgroundTint="@color/whoami_orange"
        android:text="@string/play_again_result_fragment"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.844"
        android:fontFamily="@font/days_one"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_exit_menu"
        android:layout_width="220dp"
        android:layout_height="55dp"
        android:layout_marginBottom="36dp"
        android:backgroundTint="@color/whoami_orange"
        android:text="@string/exit_result_fragment"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/days_one"/>

    <ScrollView
        android:id="@+id/sv_players_win"
        android:layout_width="347dp"
        android:layout_height="427dp"
        android:background="@drawable/frame_scrollview"
        app:layout_constraintBottom_toTopOf="@+id/btn_restart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_appbar">

        <TextView
            android:id="@+id/tv_players_win"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textSize="24sp"
            android:fontFamily="@font/days_one"/>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>