<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--    android:background=""-->


    <TextView
        android:fontFamily="@font/days_one"
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:layout_marginBottom="152dp"
        android:gravity="center"
        android:text="ВЕЧЕРИНКА!"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_teams_frag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


    <Button
        android:backgroundTint="@color/new_purple"
        android:fontFamily="@font/days_one"
        android:id="@+id/btn_teams_frag"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_marginTop="432dp"
        android:text="@string/menu_alias"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:elevation="2dp"
        android:fontFamily="@font/days_one"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:text="Объясняй слова, не называя их"
        app:layout_constraintBottom_toBottomOf="@+id/btn_teams_frag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_teams_frag"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:backgroundTint="@color/new_purple"
        android:fontFamily="@font/days_one"
        android:id="@+id/btn_players_frag"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_marginTop="492dp"
        android:text="@string/menu_who_i_am"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btn_players2_frag"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_marginTop="552dp"
        android:backgroundTint="@color/new_purple"
        android:fontFamily="@font/days_one"
        android:text="@string/menu_truth_or_dare"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/days_one"
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:elevation="2dp"
        android:gravity="center"
        android:text="Объясняй слова, не называя их"
        app:layout_constraintBottom_toBottomOf="@+id/btn_players2_frag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_players2_frag"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/days_one"
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:elevation="2dp"
        android:gravity="center"
        android:text="Попробуй угадать кто ты"
        app:layout_constraintBottom_toBottomOf="@+id/btn_players_frag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_players_frag"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>